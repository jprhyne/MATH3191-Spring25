%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%             Symbols and other shortcuts I use                 %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\renewcommand{\vec}[1]{\mathbf{#1}}
\newcommand{\x}{\vec{x}}
\newcommand{\y}{\vec{y}}
\newcommand{\R}{\mathbb{R}} 
\newcommand{\Z}{\mathbb{Z}} 
\newcommand{\N}{\mathbb{N}} 
\newcommand{\C}{\mathbb{C}}
\newcommand{\F}{\mathbb{F}}
% Probability of X
\newcommand{\p}[1]{\mathbb{P}\left[#1\right]}
% Probability of X given Y
\newcommand{\pg}[2]{\mathbb{P}\left[#1\left|#2\right.\right]}
\newcommand{\1}{\mathbbm{1}}
\DeclareMathOperator{\Ex}{\mathbb{E}}   % expected value 
\DeclareMathOperator{\Varx}{\text{Var}}   % expected value 
\DeclareMathOperator{\fl}{\mathrm{fl}}  % floating point number
\newcommand{\mb}[1]{\mathbb{#1}}
\newcommand{\mc}[1]{\mathcal{#1}}

% Expected value of X
\newcommand{\E}[1]{\Ex\left[#1\right]}
% Expected value of X given Y
\newcommand{\Eg}[2]{\Ex\left[\left.#1\right|#2\right]}
% Variance of X
\newcommand{\Var}[1]{\Varx\left(#1\right)}

\DeclarePairedDelimiter\abs{\lvert}{\rvert}
\makeatletter
\let\oldabs\abs
\def\abs{\@ifstar{\oldabs}{\oldabs*}}

% derivative of first argument with respect to second argument.
\newcommand{\dd}[2]{\dfrac{d}{d#2}\left(#1\right)}
% derivative with respect to x
\newcommand{\ddx}[1]{\dd{#1}{x}}

